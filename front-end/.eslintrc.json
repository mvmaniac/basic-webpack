{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "prettier"],
  // 자동으로 생성 시 추가되는 설정
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    // 아래는 추가한 설정, 전역변수로써 사용가능 하게
    // 아래 목록이 많아지면 .js 로 설정하는게 나을수도(?)
    "API_URL": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "plugins": ["import"],
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [["@", "./src"]],
        "extensions": [".js"]
      }
    }
  },
  "rules": {
    "no-unused-vars": ["warn"],
    "no-underscore-dangle": ["warn"],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": ["**/webpack.*.js"]
      }
    ]
  }
}
